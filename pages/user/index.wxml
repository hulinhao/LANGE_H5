<!--wxml-->


<view style="height:{{userInfoPageHeight}}px">
  <!--个人信息-->
  <view style='height:40%;'>
    <view>
      <view wx:if="{{userInfo}}">
        <view style="text-align:center"><image src='{{userInfo.avatarUrl}}' class="userinfo-avatar" background-size="cover"></image></view>
        <view style="text-align:center"><text class="userinfo-nickname">{{userInfo.nickName}}</text></view>
      </view>
      <view wx:if="{{!userInfo}}" style="text-align:center;margin-top:150px;">
        欢迎来到个人中心
        <button wx:if="{{canIUse}}" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo" style="width:80px;margin-top:20px;">登录</button>
        <view wx:else>请升级微信版本</view>
      </view>    
    </view>
  </view>
  
  <!--个人信息-->
  <view wx:if="{{userInfo}}" class="list-group">
    <view class="list-group-item" bindtap="clickUserInfo"><image src="../../image/user.png" style="height:13px;width:13px;margin-right:3px;"/>
    个人信息<image src="../../image/right.png" style="height:13px;width:13px;float:right;"/></view> 
    <view class="list-group-item" bindtap="clickCourse"><image src="../../image/course.png" style="height:13px;width:13px;margin-right:3px;"/>
    我的课程<image src="../../image/right.png" style="height:13px;width:13px;float:right;"/> </view>
    <view class="list-group-item" bindtap="clickCompany"><image src="../../image/tip.png" style="height:13px;width:13px;margin-right:3px;"/>
    平台信息<image src="../../image/right.png" style="height:13px;width:13px;float:right;"/></view>
  </view>
</view>
